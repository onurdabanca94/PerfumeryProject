@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1>Parfüm Markaları</h1>
    <div class="row my-2">
        <div class="col-12">
            <button class="btn btn-primary" onclick="ShowAddBrand();">Marka Ekle</button>
        </div>
    </div>
    <div class="row" id="table-row">
        <div class="col-sm-12 mx-auto table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Marka Adı</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody id="brand-list">
                </tbody>
            </table>
        </div>
    </div>
    <div class="row" id="insert-row">
        <div class="col-sm-6 mx-auto">
            <div class="form-group">
                <label class="control-label col-sm-3">Marka Adı:</label>
                <div class="col-sm-9">
                    <input id="brand-name" type="text" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9 my-2">
                    <button id="add-brand-button" type="button" class="btn btn-primary">Kaydet</button>
                    <button type="button" class="btn btn-secondary back-brand-button">Listeye Geri Dön</button>
                </div>
            </div>
        </div>

    </div>

    <div class="row" id="update-row">
        <div class="col-sm-6 mx-auto" id="update-container">
            
        </div>

    </div>
</div>

@section Scripts
    {
    <script src="~/js/brand.js"></script>
    <script>
        $(document).ready(function () {
            GetBrandList();
        });
    </script>
}