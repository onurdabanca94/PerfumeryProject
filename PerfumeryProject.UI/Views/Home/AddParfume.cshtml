@{
    ViewData["Title"] = "AddParfume";
}

<div class="container">
    <h1>Parfüm Sayfası</h1>

    <div class="row">
        <div class="col-sm-6 mx-auto">
            <div class="form-group">
                <label class="control-label col-sm-3">Marka:</label>
                <div class="col-sm-9">
                    <select id="brand-select" class="form-control">
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-3">İsim:</label>
                <div class="col-sm-9">
                    <input id="name-input" type="text" class="form-control" required />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-3">Fiyat:</label>
                <div class="col-sm-9">
                    <input id="price-input" min="0" type="number" class="form-control" required />
                </div>
            </div>
            <div class="form-group my-2">
                <div class="col-sm-offset-3 col-sm-9">
                    <button id="add-button" type="button" class="btn btn-primary">Kaydet</button>
                    <button id="back-button" type="button" class="btn btn-primary">Geri Dön</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/js/parfume.js"></script>
    <script>
        $(document).ready(function(){
            GetAllBrands();
        });
    </script>
}